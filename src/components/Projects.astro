---
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import Php from "./icons/Php.astro";
import Bootstrap from "./icons/Bootstrap.astro";
import Nodejs from "./icons/Nodejs.astro";
import AstroIcon from "./icons/Astroicon.astro";
import React from "./icons/React.astro";
import SassIcon from "./icons/SassIcon.astro";
import ExpressIcon from "./icons/ExpressIcon.astro";
import HtmlIcon from "./icons/HtmlIcon.astro";
import CssIcon from "./icons/CssIcon.astro";
import Wordpress from "./icons/Wordpress.astro";
import Elementor from "./icons/Elementor.astro";
import TypescriptIcon from "./icons/TypescriptIcon.astro";
import MailchimpIcon from "./icons/MailchimpIcon.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  PHP: {
    name: "PHP",
    class: "bg-[#003159] text-white",
    icon: Php,
  },
  BOOTSTRAP: {
    name: "Boostrap",
    class: "bg-[#360e67] text-white",
    icon: Bootstrap,
  },
  NODEJS: {
    name: "NodeJs",
    class: "bg-[#12250e] text-white",
    icon: Nodejs,
  },
  ASTROICON: {
    name: "Astro",
    class: "bg-[#372669] text-white",
    icon: AstroIcon,
  },
  REACTICON: {
    name: "ReactJs",
    class: "bg-[#0d607d] text-white",
    icon: React,
  },
  SASSICON:{
    name: "Sass",
    class: "bg-[#6e2d47] text-white",
    icon: SassIcon,
  },
  EXPRESSICON: {
    name: "Express",
    class: "bg-[#464646] text-white",
    icon: ExpressIcon,
  },
  HTMLICON: {
    name: "HTML",
    class: "bg-[#464646] text-white",
    icon: HtmlIcon,
  },
  CSSICON: {
    name: "CSS",
    class: "bg-[#165576] text-white",
    icon: CssIcon,
  },
  WORDPRESS: {
    name: "Wordpress",
    class: "bg-[#7ccce4] text-black",
    icon: Wordpress,
  },
  ELEMENTOR: {
    name: "Elementor",
    class: "bg-[#ff9eae] text-white",
    icon: Elementor,
  },
  TYPESCRIPT: {
    name: "Typescript",
    class: "bg-[#1b4171] text-white",
    icon: TypescriptIcon,
  },
  MAILCHIMP: {
    name: "Mailchimp",
    class: "bg-[#7c7c7c] text-white",
    icon: MailchimpIcon,
  }
  };

const PROJECTS = [
  {
    title: "GamerClubVIP - Community of gamers and video game news.",
    description:
      "Platform for gamers, featuring the latest video game news, guides, cheats, and much more.",
    postdata: "Currently undergoing migration to Next.js for improved design and performance.",
    link: "https://gamerclub.vip",
    linkprueba: "https://gamerclub.netlify.app",
    image: "/proyectos/gamerclub.webp",
    tags: [TAGS.PHP, TAGS.BOOTSTRAP],
  },
  {
    title: "Proseragro - Service Promoters and Agricultural Agro-Management.",
    description: "We are a project committed to contributing to the development of the agricultural sector by providing specialized communication and marketing services in the phytosanitary sector.",
    link: "https://proseragro.com/",
    image: "/proyectos/proseragro.webp",
    tags: [TAGS.ASTROICON, TAGS.TYPESCRIPT, TAGS.REACTICON, TAGS.MAILCHIMP],
  },
  {
    title: "BLOGTIMedia - Lodging and streaming services",
    description:
      "Accommodation, streaming, and on-demand software services provided free of charge to all non-profit Christian institutions.",
    link: "https://blogtimedia.com/",
    image: "/proyectos/blogtimedia.webp",
    tags: [TAGS.NODEJS, TAGS.EXPRESSICON, TAGS.TAILWIND],
  },
  {
    title: "Fundaci√≥n Letty Rivera - Developing talents through Art and Culture.",
    description:
      "We aim to rescue art in our town, La Vega, Dominican Republic.",
    link: "https://fundacionlettyrivera.com",
    image: "/proyectos/fundacionlettyrivera.webp",
    tags: [TAGS.ASTROICON, TAGS.TYPESCRIPT, TAGS.SASSICON],
  },
];


const SECOND_PROJECTS = [
{
    title: "Dra. Catherine Merejo",
    description:
      "Dra. Merejo, Clinical Cardiology, Arrhythmias, Pacemakers, Electrophysiology, and much more.",
    link: "https://dramerejo.com/",
    image: "/proyectos/dramerejo.webp",
    tags: [TAGS.WORDPRESS, TAGS.ELEMENTOR],
  },
{
    title: "Mi Sonografo - Xbit 90",
    description:
      "XBit 90's brand new processing platform brings brilliant ultrasound image quality, which is a milestone for CHISON.",
    link: "https://misonografo.netlify.app/",
    image: "/proyectos/misonografo.webp",
    tags: [TAGS.HTMLICON, TAGS.CSSICON],
  },
  {
    title: "eChurchApp by BlogTIMedia",
    description:
      "A web application created to facilitate the management of your ministry.",
    link: "https://iglesia.do/",
    image: "/proyectos/echurchapp.webp",
    tags: [TAGS.ASTROICON, TAGS.CSSICON, TAGS.NODEJS, TAGS.EXPRESSICON],
  },
];
---

<div class="grid md:grid-cols-2 gap-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, postdata, linkprueba }) => (
      <article class="flex flex-col items-center w-full space-x-0 space-y-8 group md:space-x-8 md:space-y-0">
        <div class="w-full mb-5">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt={title}
              class="object-cover object-top w-full h-48 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:max-w-lg">
          <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100">{title}</h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row flex-wrap mb-2 gap-x-2">
              {tags.map((tag) => (
                <li class="mb-2">
                  <span class={`flex  gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}>
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mb-4">
              <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
              <p class="text-gray-500/60 dark:text-gray-400/50 text-sm">{postdata && linkprueba && (
                <span class="mr-1">{postdata}</span> 
                <a target="_blank" class="dark:text-yellow-400/50 text-[#2c7d8e]/60" href={linkprueba}>Stay tuned for updates.</a>
              )}</p>
            </div>
            <footer class="flex items-end justify-start  gap-x-4">
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>

<div class="grid md:grid-cols-3 gap-16 mt-16">
  {
    SECOND_PROJECTS.map(({ image, title, description, tags, link }) => (
      <article class="flex flex-col items-center w-full space-x-0 space-y-8 group md:space-x-8 md:space-y-0">
        <div class="w-full mb-5">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt={title}
              class="object-cover object-top w-full h-48 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:max-w-lg">
          <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100">{title}</h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row flex-wrap mb-2 gap-x-2">
              {tags.map((tag) => (
                <li class="mb-2">
                  <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}>
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mb-4">
              <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
            </div>
            <footer class="flex items-end justify-start  gap-x-4">
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>